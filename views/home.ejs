<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Chat - Home</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #007bff; 
            --dark-bg: #1a1d29; 
            --light-gray: #f0f4f8; 
            --text-light: #d1d5db;
            --button-hover: #0056b3; 
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: var(--dark-bg);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            color: white;
        }

        /* Navbar */
        .navbar {
            position: absolute;
            top: 0;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: flex;
            justify-content: space-between;
            padding: 15px 40px;
        }

        .navbar .logo {
            font-size: 20px;
            font-weight: bold;
            color: var(--primary-color);
        }

        .navbar .nav-links {
            display: flex;
            gap: 20px;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            transition: 0.3s;
        }

        .nav-links a:hover {
            color: var(--primary-color);
        }

        /* Main container */
        .container {
            background-color: #24283b;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 400px;
            transition: transform 0.2s;
        }

        .container:hover {
            transform: scale(1.02);
        }

        h1 {
            color: var(--primary-color);
            margin-bottom: 20px;
            font-size: 28px;
            font-weight: 600;
        }

        .btn {
            display: block;
            padding: 14px;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s;
            text-decoration: none;
            width: 100%;
            margin-bottom: 10px;
        }

        .btn:hover {
            background-color: var(--button-hover);
        }

        .input-group {
            text-align: left;
            margin-top: 20px;
        }

        .input-group label {
            font-size: 14px;
            color: var(--text-light);
        }

        .input-group input {
            width: 100%;
            padding: 12px;
            border-radius: 6px;
            border: none;
            font-size: 16px;
            outline: none;
            margin-top: 5px;
        }

        #join-btn {
            margin-top: 12px;
            padding: 12px;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.2s;
            width: 100%;
        }

        #join-btn:hover {
            background-color: var(--button-hover);
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <div class="logo">VideoChat</div>
    </div>

    <!-- Main Section -->
    <div class="container">
        <h1>Start or Join a Meeting</h1>
        <a href="/new-call" class="btn">Start a New Meeting</a>

        <div class="input-group">
            <label for="room-code">Enter Room Code:</label>
            <input type="text" id="room-code" placeholder="e.g., abc123">
            <button id="join-btn">Join Meeting</button>
        </div>
    </div>

    <script>
        const joinButton = document.getElementById('join-btn');
        const roomCodeInput = document.getElementById('room-code');

        joinButton.addEventListener('click', () => {
            const roomCode = roomCodeInput.value.trim();
            if (roomCode !== "") {
                window.location.href = `/${roomCode}`;
            } else {
                alert("Please enter a room code.");
            }
        });

        roomCodeInput.addEventListener('keyup', (event) => {
            if (event.key === "Enter") {
                joinButton.click();
            }
        });
    </script>

</body>
</html>
